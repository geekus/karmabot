{
    "extends": "airbnb-base",
    "env": {
      "mocha": true,
      "node": true
    },
    "plugins": ["mocha"],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": false
      }
    },
    "rules": {
      "strict": [0],
      "semi": [0],
      "no-param-reassign": [2, { "props": false }],
      "mocha/no-exclusive-tests": "error"
    }
}
